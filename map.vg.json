{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "params": [
    {
      "name": "Year_selection",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2002,
        "max": 2021,
        "step": 1,
        "name": "Year:  "
      }
    },
    {
      "name": "zoom_level",
      "value": 12000,
      "bind": {
        "input": "range",
        "min": 1000,
        "max": 13000,
        "step": 200,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [145, -37.95],
      "bind": {
        "input": "select",
        "options": [
          [145, -37.95],
          [151.2, -33.86],
          [153.1, -27.47]
        ],
        "labels": ["Melbourne CBD", "Sydney", "Brisbane"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
      "url": "LGA_2021_AUST_GDA2020.json",
      "format": {"type": "topojson", "feature": "LGA_2021_AUST_GDA2020"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/patjoey/vis2/refs/heads/main/growth.csv"
      },
      "transform": [
        {
          "lookup": "lga_name_2021",
          "from": {
            "data": {
            "url": "LGA_2021_AUST_GDA2020.json",
            "format": {"type": "topojson", "feature": "LGA_2021_AUST_GDA2020"}
            },
            "key": "properties.LGA_NAME21"
          },
          "as": "geo"
        },
        {"calculate": "datum[Year_selection]", "as": "year_price"}
      ],
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "year_price",
          "type": "quantitative",
          "scale": {
          "type": "threshold",
          "domain": [-8, -4, 0, 4, 8],
          "range": ["#9c4510", "#dc8629", "#fdd691", "#bbe5d1", "#3ea8a7", "#086769"]},
          "legend": {"format": ".2s", "title":"Growth Rate (Percent)"}
        },
        "tooltip": [
          {"field": "lga_name_2021", "type": "nominal", "title": "Local Government Area"},
          {
            "field": "year_price",
            "type": "quantitative",
            "title": "year_price",
            "format": ","
          }
        ]
      }
    }
  ],
  "config": {}
}
