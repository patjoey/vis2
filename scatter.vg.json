{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "background": "#f2f2f2",
  "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
  "data": {"url": "growth.csv"},
  "params": [
    {
      "name": "State_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "labels": [
          "Show All",
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "State Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "State_selection == null || datum.state_name_2021 == State_selection"
    }
  ],
  "mark": "point",
  "encoding": {
    "x": {"field": "erp_2019", "type": "quantitative","title": "Population", "scale": {"type": "log"}},
    "y": {"field": "2019", "type": "quantitative", "title": "Growth Rate"},
    "color":{"field": "state_name_2021", "type": "nominal", "legend": {"orient":"top-left", "title": "State or Territory"}},
    "tooltip": [
      {"field": "lga_name_2021", "type": "nominal", "title": "Local Government Area"},
      {"field": "2019", "type": "quantitative", "title": "Percentage Growth", "format":".2f"},
      {"field": "erp_2019", "type": "quantitative", "title": "Population", "format":","}
        ]
  }
}
