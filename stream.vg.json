{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "#f2f2f2",
    "data": {
      "url": "https://raw.githubusercontent.com/patjoey/vis2/refs/heads/main/new_building.csv"
    },
    "params": [
      {
        "name": "State_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "New South Wales",
            "Victoria",
            "Queensland",
            "South Australia",
            "Western Australia",
            "Tasmania",
            "Northern Territory",
            "Australian Capital Territory"
          ],
          "labels": [
            "Show All",
            "New South Wales",
            "Victoria",
            "Queensland",
            "South Australia",
            "Western Australia",
            "Tasmania",
            "Northern Territory",
            "Australian Capital Territory"
          ],
          "name": "State Selection: "
        }
      }
    ],
    "transform": [
      {
        "filter": "State_selection == null || datum.State == State_selection"
      }
    ],
    "vconcat": [
      {
        "width": "container",
        "height": 240,
        "mark": "area",
        "encoding": {
          "x": {
            "timeUnit": "yearquarter", "field": "Date",
            "scale": {"domain": {"param": "brush"}},
            "axis": {"domain": false, "format": "%Y", "tickSize": 0},
            "title": "Date (years)"
          },
          "y": {
            "aggregate": "sum", "field": "Building_pop",
            "stack": "zero",
            "title": "New Houses Per Million People"
          },
          "color": {"field":"State", "scale":{"scheme": "tableau10"},"legend":{"orient":"top"}},
          "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Date", "type": "temporal","timeUnit":"yearquarter","title": "Date"},
          {"field": "Building_pop", "type": "quantitative", "title": "New Houses/Million People", "format":".2f"}
        ]
        }
      },
      {
        "width": "container",
        "height": 60,
        "mark": "line",
        "params": [
          {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
        ],
        "encoding": {
          "x": {
            "timeUnit": "yearmonth", "field": "Date",
            "axis": {"domain": false, "format": "%Y", "tickSize": 0},
            "title": "Date (years)"
          },
          "y": {
            "aggregate": "sum", "field": "Building_pop",
            "title": "New Houses/million People"
          }
        }
      }
    ]
  }